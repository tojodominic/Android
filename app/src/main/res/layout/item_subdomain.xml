<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="90dp"
    android:padding="15dp"
    android:background="@drawable/gradsubdomain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Domain : "
            android:textSize="16dp"
            android:textColor="#544949" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub Domain Name"
            android:textSize="18dp"
            android:textColor="#050505"
            android:id="@+id/subdomainItemSubdomain"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Methods : "
            android:textSize="14dp"
            android:textColor="#544949"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allowed Methods : "
            android:textSize="15dp"
            android:textColor="#050505"
            android:id="@+id/methodsItemSubDomain"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Code : "
            android:textSize="14dp"
            android:textColor="#544949"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Code"
            android:textSize="16dp"
            android:textColor="#050505"
            android:id="@+id/statusItemSubDomain"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Open Ports"
            android:paddingRight="10dp"
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btnportsItemSubDomain"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Directories"
            android:paddingRight="10dp"
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btndirectoriesItemSubDomain"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="DNS"
            android:paddingRight="10dp"
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btndnsItemSubDomain"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="Technology"
            android:paddingRight="10dp"
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btntechItemSubDomain"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="Whois"
            android:paddingRight="10dp"
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/btnwhoisItemSubDomain"/>
    </LinearLayout>

</LinearLayout>